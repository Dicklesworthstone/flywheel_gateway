{
  "name": "flywheel-gateway",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:gateway & bun run dev:web",
    "dev:gateway": "bun run --filter @flywheel/gateway dev",
    "dev:web": "bun run --filter @flywheel/web dev",
    "build": "bun run --filter '*' build",
    "test": "DB_FILE_NAME=:memory: bun test apps packages .test.ts",
    "test:integration": "DB_FILE_NAME=:memory: bun test tests/integration",
    "test:e2e": "bunx playwright test",
    "e2e:server": "bun scripts/e2e-server.ts",
    "test:contract": "DB_FILE_NAME=:memory: bun test tests/contract",
    "test:load": "k6 run tests/load/api.k6.js",
    "test:load:ws": "k6 run tests/load/websocket.k6.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "parity-check": "bun scripts/parity-check.ts",
    "db:generate": "bun run --filter @flywheel/gateway db:generate",
    "db:migrate": "bun run --filter @flywheel/gateway db:migrate",
    "db:studio": "bun run --filter @flywheel/gateway db:studio",
    "flywheel": "bun scripts/flywheel.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@playwright/test": "^1.58.2",
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "zod": "^4.3.6"
  }
}
